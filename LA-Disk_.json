{
    "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "scheduledqueryrules_Test_DiskSpaceAlerts_name": {
            "defaultValue": "Test-DiskSpaceAlerts",
            "type": "String"
        },
        "workspaces_log_ipsl_operational_mgmt_uks_001_externalid": {
            "defaultValue": "/subscriptions/37753597-fdb6-4a83-aef3-05fa979ff57d/resourceGroups/rg-ipsl-logging-mgmt-uks-001/providers/microsoft.operationalinsights/workspaces/log-ipsl-operational-mgmt-uks-001",
            "type": "String"
        },
        "actionGroups_Test_AG_pj_externalid": {
            "defaultValue": "/subscriptions/8194f84a-e1da-4ddc-af91-6687d8c6bd67/resourceGroups/rg-advisor-alerts/providers/microsoft.insights/actionGroups/Test-AG-pj",
            "type": "String"
        }
    },
    "variables": {},
    "resources": [
        {
            "type": "microsoft.insights/scheduledqueryrules",
            "apiVersion": "2021-08-01",
            "name": "[parameters('scheduledqueryrules_Test_DiskSpaceAlerts_name')]",
            "location": "uksouth",
            "properties": {
                "displayName": "[parameters('scheduledqueryrules_Test_DiskSpaceAlerts_name')]",
                "severity": 3,
                "enabled": true,
                "evaluationFrequency": "PT5M",
                "scopes": [
                    "[parameters('workspaces_log_ipsl_operational_mgmt_uks_001_externalid')]"
                ],
                "targetResourceTypes": [
                    "microsoft.operationalinsights/workspaces"
                ],
                "windowSize": "PT5M",
                "criteria": {
                    "allOf": [
                        {
                            "query": "let rg_name = \"rg-uks-lbg-prod-vr-001\"; // put you resource group name here\nlet resource_group = strcat(\"resourcegroups/\",rg_name);// build resourcegroup name\n// get disk percent first and store as variable\nPerf\n| where _ResourceId contains resource_group\n| where ObjectName == \"LogicalDisk\" and CounterName == \"% Free Space\" and InstanceName has \":\" \n",
                            "timeAggregation": "Average",
                            "metricMeasureColumn": "CounterValue",
                            "dimensions": [],
                            "resourceIdColumn": "_ResourceId",
                            "operator": "GreaterThan",
                            "threshold": 10,
                            "failingPeriods": {
                                "numberOfEvaluationPeriods": 1,
                                "minFailingPeriodsToAlert": 1
                            }
                        }
                    ]
                },
                "autoMitigate": false,
                "actions": {
                    "actionGroups": [
                        "[parameters('actionGroups_Test_AG_pj_externalid')]"
                    ]
                }
            }
        }
    ]
}